.sort_header, .available_header, .sort_header_inactive {
    font-size: .8em;
    font-weight: bold;
    padding: 5px;
    -moz-border-radius-topleft: 5px;
    -moz-border-radius-topright: 5px;
    -webkit-border-top-left-radius: 5px;
    -webkit-border-top-right-radius: 5px;
    
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

.sort_header {
    background-color: #ABD6FF;
}

.sort_header_inactive{
    background-color: #CCCCCC;
}

.available_header {
    background-color: #C0E4BE;
}



.sort_item, .sort_item_inactive, .available_item {
    background-color: #FFFFFF;
    border: navy solid 1px;
    margin-bottom: 10px;
    -moz-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    -moz-box-shadow: 2px 2px 2px #686868;
    -webkit-box-shadow: 2px 2px 2px #686868;
    box-shadow: 2px 2px 2px #686868;
}


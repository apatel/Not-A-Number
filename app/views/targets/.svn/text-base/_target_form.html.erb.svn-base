      <%= target_form.label :title, "Title", :class => "bold_text" %><br />
      <%= target_form.text_field :title %><br />

      <%= target_form.label :ouput_text, "Text for display", :class => "bold_text" %><br />
      <%= target_form.text_field :output_text %><br />

      <%= target_form.label :type, "Type", :class => "bold_text" %><br />
      <%= target_form.select(:type, (TargetType.find(:all).collect{|type| type.output_text}), {:include_blank => 'None'}) %><br />

      <%= target_form.label :description, "Description", :class => "bold_text" %><br />
      <%= target_form.text_area :description, :cols => 50, :rows => 5 %><br />

      <%= target_form.label :notes, "Notes", :class => "bold_text" %><br />
      <%= target_form.text_area :notes, :cols => 50, :rows => 5 %><br />

      <%= target_form.label :content, "Content", :class => "bold_text" %><br />
      <%= target_form.text_area :content, :cols => 50, :rows => 5 %><br />

      <%= hidden_field_tag :source, source %>
      
      <% if @target_list %>
        <%= hidden_field_tag :parent_id, @target_list.id %>
      <% end %>
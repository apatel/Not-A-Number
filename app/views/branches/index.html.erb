<div id="page_title">Branches</div><br />

<table id="project_index">
  <tr>
  	<td class="p5">Question</td>
	<td class="p5" colspan=3>Actions</td>
  </tr>

<% @branches.each do |branch| %>
  	
  <tr>
  	<td class="p5"><%= branch.question_id %></td>
    <td class="p5"><%= link_to 'Show', branch %></td>
    <td class="p5"><%= link_to 'Edit', edit_branch_path(branch, :source => "dialog_index", :project_id => branch.project_id, :group_id => branch.group_id), :title => "Edit Branch ID #{branch.id}", :onclick => "Modalbox.show(this.href, {title: this.title, width: 600}); return false;" %></td>
    <td class="p5"><%= link_to 'Remove', branch, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
